= content_for :page_title do
  = Spree.t(:blogs)
  %i.icon-arrow-right= Spree.t(:new_blog)
= content_for :page_actions do
  %li= button_link_to Spree.t(:back), spree.admin_blogs_url, icon: 'icon-arrow-left'
= render "spree/shared/error_messages", target: @blog
= form_for [:admin, @blog] do |f|
  = render partial: f
  = render partial: 'spree/admin/shared/edit_resource_links'
