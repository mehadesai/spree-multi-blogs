= content_for :page_title do
  = Spree.t('blog_entry.entry')
  %i.icon-arrow-right= "#{Spree.t('blog_entry.edit')} #{@blog_entry.title}"
  = button_link_to Spree.t('blog_entry.back'), admin_blog_blog_entries_url(blog_id: @blog_entry.blog_id), icon: 'icon-arrow-left', class: 'btn-success'
= render "spree/shared/error_messages", target: @blog_entry
= form_for [:admin, @blog_entry.blog, @blog_entry] do |f|
  = render partial: f
  = button Spree.t('actions.update'), 'refresh', 'submit', { class: 'btn-success' }
