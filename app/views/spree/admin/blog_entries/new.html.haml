= content_for :page_title do
  = Spree.t(:new_blog_entry)
= content_for :page_actions do
  = button_link_to Spree.t(:back), admin_blog_url(params[:blog_id]), icon: 'icon-arrow-left', class: 'btn-success'
= render 'spree/shared/error_messages', target: @blog_entry
= form_for @blog_entry, url: { action: 'create' } do |f|
  = render partial: f
  = button Spree.t('actions.update'), 'refresh', 'submit', { class: 'btn-success' }
