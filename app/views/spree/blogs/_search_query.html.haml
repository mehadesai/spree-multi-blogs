- if params[:q][:tags_name_eq].present?
  .span
    %b= Spree.t('blog_entry.tags').singularize + ': '
    = params[:q][:tags_name_eq]
- elsif params[:q][:authors_user_detail_nickname_eq].present?
  .span
    %b= Spree.t('blog_entry.author') + ': '
    = params[:q][:authors_user_detail_nickname_eq]
- elsif params[:q][:authors_email_eq].present?
  .span
    %b= Spree.t('blog_entry.author') + ': '
    = params[:q][:authors_email_eq]
